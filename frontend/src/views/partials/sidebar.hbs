{{!-- Wartende Patienten --}}
<div
  class="tab-pane fade show active"
  id="pane-waiting"
  role="tabpanel"
  aria-labelledby="tab-waiting"
>
  <ul id="all-patient-list" class="list-group mb-2">
    {{#each (sortByTriage waitingPatients)}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <a
          href="/patient/{{this.id}}"
          class="patient-name text-decoration-none"
        >
          {{this.name}}
        </a>
        <span class="d-flex align-items-center">
          {{#if this.triage}}
            <span class="triage-indicator me-2">
              <span class="triage-circle level-{{this.triage}} active"></span>
            </span>
          {{/if}}
          <!-- Button im Icon-Only-Stil wie in Coordination/Registration -->
          <button
            class="btn btn-icon-only move-to-active"
            type="button"
            data-id="{{this.id}}"
            data-name="{{this.name}}"
            data-triage="{{this.triage}}"
          >
            <i class="bi bi-arrow-right-circle"></i>
          </button>
        </span>
      </li>
    {{else}}
      <li class="list-group-item text-center text-muted">
        Keine wartenden Patienten
      </li>
    {{/each}}
  </ul>
</div>

{{!-- In Behandlung --}}
<div
  class="tab-pane fade"
  id="pane-active"
  role="tabpanel"
  aria-labelledby="tab-active"
>
  <ul id="active-patient-list" class="list-group mb-2">
    {{#each (sortByTriage activePatients)}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <a
          href="/patient/{{this.id}}"
          class="patient-name text-decoration-none"
        >
          {{this.name}}
        </a>
        <span class="d-flex align-items-center">
          {{#if this.triage}}
            <span class="triage-indicator ms-2">
              <span class="triage-circle level-{{this.triage}} active"></span>
            </span>
          {{/if}}
        </span>
      </li>
    {{else}}
      <li class="list-group-item text-center text-muted">
        Keine Patienten in Behandlung
      </li>
    {{/each}}
  </ul>
</div>