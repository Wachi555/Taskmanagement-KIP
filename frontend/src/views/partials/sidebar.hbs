{{!-- Wartende Patienten --}}
<div
  class="tab-pane fade show active"
  id="pane-waiting"
  role="tabpanel"
  aria-labelledby="tab-waiting"
>
  <ul class="list-group mb-2">
    {{#each waitingPatients}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="patient-name">{{name}}</span>
        <button
          class="btn btn-sm btn-outline-primary move-to-active"
          data-name="{{name}}"
          data-triage="{{triage}}"
        >Verschieben</button>
      </li>
    {{/each}}
    {{#unless waitingPatients.length}}
      <li class="list-group-item text-center text-muted">
        Keine wartenden Patienten
      </li>
    {{/unless}}
  </ul>
</div>

{{!-- In Behandlung --}}
<div
  class="tab-pane fade"
  id="pane-active"
  role="tabpanel"
  aria-labelledby="tab-active"
>
  <ul id="active-patient-list" class="list-group mb-2">
    {{#each activePatients}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <a
          href="/patient/{{encodeURIComponent name}}"
          class="patient-name text-decoration-none"
        >
          {{name}}
        </a>
        <span class="triage-circle level-{{triage}}"></span>
      </li>
    {{/each}}
    {{#unless activePatients.length}}
      <li class="list-group-item text-center text-muted">
        Keine Patienten in Behandlung
      </li>
    {{/unless}}
  </ul>
</div>
