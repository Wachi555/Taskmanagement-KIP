<div class="tab-pane fade show active" id="pane-waiting" role="tabpanel" aria-labelledby="tab-waiting">
  <ul class="list-group list-group-flush">
    {{#each waitingPatients}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="patient-name">{{this.name}}</span>
        <button class="btn btn-sm move-to-active btn-custom-arrow" data-name="{{this.name}}">
          <i class="bi bi-arrow-right-circle"></i>
        </button>
      </li>
    {{/each}}

    {{#unless waitingPatients.length}}
      <li class="list-group-item text-center text-muted">
        Keine wartenden Patienten.
      </li>
    {{/unless}}
  </ul>
</div>
