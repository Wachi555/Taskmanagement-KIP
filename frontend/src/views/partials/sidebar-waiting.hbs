<div class="tab-pane fade" id="pane-waiting" role="tabpanel" aria-labelledby="tab-waiting">
  <ul class="list-group list-group-flush">
    {{#each waitingPatients}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        {{this.name}}
        <span class="badge bg-secondary">{{this.waitTime}} min</span>
      </li>
    {{/each}}
    {{#unless waitingPatients}}
      <li class="list-group-item text-center text-muted">
        Keine wartenden Patienten.
      </li>
    {{/unless}}
  </ul>
</div>
