<div class="card">
  <div class="card-header">Vergangene Besuche & Diagnosen</div>
  <ul class="list-group list-group-flush">
    {{#each history}}
      <li class="list-group-item">
        <strong>{{this.date}}:</strong> {{this.event}}
      </li>
    {{else}}
      <li class="list-group-item text-muted">Keine Historie vorhanden.</li>
    {{/each}}
  </ul>
</div>
