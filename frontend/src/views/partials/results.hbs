<div class="output-box">
  <div class="output-header">
    <h6>Auswertung</h6>
    <div id="triageIndicator" class="triage-indicator">
      {{#each levels}}<div class="triage-circle level-{{this}}"></div>{{/each}}
    </div>
  </div>

  <ul id="resultData" class="list-group list-group-flush mb-0">
    <li class="list-group-item">
      <strong>Triagestufe:</strong> <span id="triageValue"></span>
    </li>
    
    <li class="list-group-item exams-container">
    <div class="d-flex justify-content-between align-items-center">
      <strong>Untersuchungen:</strong> 
      <button id="toggleExams" class="btn btn-sm btn-outline-secondary" aria-expanded="false">
        <i class="bi bi-chevron-down"></i>
      </button>
    </div>
    <ul id="examsList" class="list-group list-group-flush mt-2"></ul>
  </li>

    
    <li class="list-group-item">
      <strong>Experten:</strong> <span id="expertsValue"></span>
    </li>
  </ul>
</div>