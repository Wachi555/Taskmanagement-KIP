<div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: 2rem;">
  <a href="/new-patient" class="btn btn-primary">
    <i class="bi bi-plus-circle me-2"></i> Neuen Patienten anlegen
  </a>
</div>

<hr class="mb-4" style="border-top: 2px solid #dee2e6;" />

<div class="row bg-light rounded py-4 align-items-start">

  <!-- Linke Spalte: Alle Patienten (nicht klickbar) -->
  <div class="col-md-6 border-end pe-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h4 class="mb-0">Patientenregister</h4>
      <button
        class="btn btn-icon-only"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#search-all-section"
        aria-expanded="false"
        aria-controls="search-all-section"
      >
        <i class="bi bi-search"></i>
      </button>
    </div>
    <div id="search-all-section" class="collapse mb-3">
      <input
        type="text"
        id="search-all"
        class="form-control"
        placeholder="Alle Patienten suchen…"
      />
    </div>
    <ul class="list-group">
      {{#each allPatients}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <!-- nicht klickbar -->
          <span class="patient-name">{{this.first_name}} {{this.last_name}}</span>
        </li>
      {{/each}}

      {{#unless allPatients.length}}
        <li class="list-group-item text-muted text-center">Keine Patienten vorhanden</li>
      {{/unless}}
    </ul>
  </div>

  <!-- Rechte Spalte: Wartende & Aktive -->
  <div class="col-md-6 ps-4">

    <!-- Wartende Patienten (klickbar) -->
    <div id="pane-waiting">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Wartende Patienten</h4>
        <button
          class="btn btn-icon-only"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#search-waiting-section"
          aria-expanded="false"
          aria-controls="search-waiting-section"
        >
          <i class="bi bi-search"></i>
        </button>
      </div>
      <div id="search-waiting-section" class="collapse mb-3">
        <input
          type="text"
          id="search-waiting"
          class="form-control"
          placeholder="Wartende Patienten suchen…"
        />
      </div>
      <ul class="list-group">
        {{#each waitingPatients}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <!-- Link zur Overview -->
            <a href="/patient/{{this.id}}/overview" class="text-decoration-none patient-name">
              {{this.name}}
            </a>
            <span class="d-flex align-items-center">
              <span class="triage-indicator me-2">
                <span class="triage-circle level-{{this.triage}} active"></span>
              </span>
              <button
                class="btn btn-icon-only move-to-active"
                data-id="{{this.id}}"
                data-name="{{this.name}}"
                data-triage="{{this.triage}}"
              >
                <i class="bi bi-arrow-down-circle"></i>
              </button>
            </span>
          </li>
        {{/each}}

        {{#unless waitingPatients.length}}
          <li class="list-group-item text-muted text-center">Keine wartenden Patienten</li>
        {{/unless}}
      </ul>
    </div>

    <!-- Aktive Patienten (klickbar) -->
    <div id="pane-active" class="mt-4">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">In Behandlung</h4>
        <button
          class="btn btn-icon-only"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#search-active-section"
          aria-expanded="false"
          aria-controls="search-active-section"
        >
          <i class="bi bi-search"></i>
        </button>
      </div>
      <div id="search-active-section" class="collapse mb-3">
        <input
          type="text"
          id="search-active"
          class="form-control"
          placeholder="In Behandlung suchen…"
        />
      </div>
      <ul id="active-patient-list" class="list-group">
        {{#each activePatients}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <!-- Link zur Overview -->
            <a href="/patient/{{this.id}}/overview" class="text-decoration-none patient-name">
              {{this.name}}
            </a>
            <span class="d-flex align-items-center">
              <span class="triage-indicator">
                <span class="triage-circle level-{{this.triage}} active"></span>
              </span>
            </span>
          </li>
        {{/each}}

        {{#unless activePatients.length}}
          <li class="list-group-item text-muted text-center">Keine aktiven Patienten</li>
        {{/unless}}
      </ul>
    </div>

  </div>
</div>

<script src="/js/main.js"></script>
