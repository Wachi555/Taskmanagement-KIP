{{!-- views/patient-input.hbs --}}

<!-- Patienten-Überschrift -->
<div class="mb-4">
  <h2 class="fw-bold">{{data.name}}</h2>
</div>

<div class="row gx-4 gy-4">
  <!-- Linke Spalte: Anamnese (½ Breite) -->
  <div class="col-12 col-md-6 d-flex flex-column" style="height: 100%;">
    <div class="mb-4 flex-grow-1 overflow-auto" style="min-height: 60vh;">
      {{> input-area data=data }}
    </div>
  </div>

  <!-- Rechte Spalte: Patientendaten & Ergebnisse (½ Breite) -->
  <div class="col-12 col-md-6 d-flex flex-column gap-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Patientendaten</h5>
      </div>
      <div class="card-body">
        {{> patient-data data=data }}
      </div>
    </div>

    <div class="card flex-grow-1">
      <div class="card-header">
        <h5 class="mb-0">Ergebnisse</h5>
      </div>
      <div class="card-body overflow-auto" style="max-height: 400px;">
        {{> results }}
      </div>
    </div>
  </div>
</div>
