<div class="mb-4 d-flex align-items-center">
  <a href="/registration" class="btn btn-link text-muted p-0 me-3" title="Zurück">
    <i class="bi bi-arrow-left-short fs-3"></i>
  </a>
  <h2 class="fw-bold mb-0">
    {{#if data.name}}
      {{data.name}}
    {{else}}
      Patientenübersicht
    {{/if}}
  </h2>
</div>

{{#if errorMessage}}
  <div class="alert alert-warning mt-3">{{errorMessage}}</div>
{{/if}}

<div class="row gx-4 gy-4 mt-2">
  <div class="col-12 col-md-6 patient-overview">

    {{!-- Patientendaten --}}
    <div class="card mb-4 w-100">
      <div class="card-header">
        <h5 class="mb-0">Patientendaten</h5>
      </div>
      <div class="card-body overflow-auto" style="max-height: 60vh;">
        <table class="info-table">
          <tr>
            <th>Geburtsdatum:</th>
            <td>{{#if data.dob}}{{formatDate data.dob}}{{else}}–{{/if}}</td>
          </tr>
          <tr>
            <th>Adresse:</th>
            <td>{{#if data.adresse}}{{data.adresse}}{{else}}–{{/if}}</td>
          </tr>
          <tr>
            <th>Krankenkasse:</th>
            <td>{{#if data.krankenkasse}}{{data.krankenkasse}}{{else}}–{{/if}}</td>
          </tr>
          <tr>
            <th>Aktuelle Symptome:</th>
            <td>
              {{#if symptoms.length}}
                {{#each symptoms}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
              {{else}}–{{/if}}
            </td>
          </tr>
        </table>
      </div>
    </div>

    {{!-- Bisherige Ergebnisse --}}
    <div class="card w-100">
      <div class="card-header">
        <h5 class="mb-0">Bisherige Ergebnisse</h5>
      </div>
      <div class="card-body overflow-auto" style="max-height: 60vh;">
        <table class="info-table">
          <tr>
            <th>Mögliche Diagnosen:</th>
            <td>
              {{#if diagnoses.length}}
                {{#each diagnoses}}
                  {{this.name}}{{#unless @last}}, {{/unless}}
                {{/each}}
              {{else}}–
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>Triagestufe:</th>
            <td>{{#if triage}}{{triage}}{{else}}–{{/if}}</td>
          </tr>
          <tr>
            <th>Untersuchungen:</th>
            <td>
              {{#if exams.length}}
                <ul>
                  {{#each exams}}
                    <li>{{this.name}} <span class="badge bg-secondary">{{this.priority}}</span></li>
                  {{/each}}
                </ul>
              {{else}}–
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>Behandlungen:</th>
            <td>
              {{#if treatments.length}}
                {{#each treatments}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
              {{else}}–
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>Experten:</th>
            <td>
              {{#if experts.length}}
                {{#each experts}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
              {{else}}–
              {{/if}}
            </td>
          </tr>
          <tr>
            <th>Allergien:</th>
            <td>
              {{#if allergies.length}}
                {{#each allergies}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
              {{else}}–
              {{/if}}
            </td>
          </tr>
        </table>
      </div>
    </div>

  </div>
</div>
