<div class="mb-4 d-flex align-items-center">
  <a href="/registration" class="btn btn-link text-muted p-0 me-3" title="Zurück">
    <i class="bi bi-arrow-left-short fs-3"></i>
  </a>
  <h2 class="fw-bold mb-0">
    {{#if data.name}}
      {{data.name}}
    {{else}}
      Patientenübersicht
    {{/if}}
  </h2>
</div>

{{#if errorMessage}}
  <div class="alert alert-warning mt-3">{{errorMessage}}</div>
{{/if}}

<div class="row gx-4 gy-4 mt-2">
  <div class="col-12 col-md-6">
    {{!-- Patientendaten --}}
    <div class="card mb-4 w-100">
      <div class="card-header">
        <h5 class="mb-0">Patientendaten</h5>
      </div>
      <div class="card-body overflow-auto" style="max-height: 60vh;">
        <ul class="list-group list-group-flush mb-0">
          <li class="list-group-item">
            <strong class="me-3">Geburtsdatum:</strong>
            {{#if data.dob}}{{formatDate data.dob}}{{else}}–{{/if}}
          </li>
          <li class="list-group-item">
            <strong class="me-3">Adresse:</strong>
            {{#if data.adresse}}{{data.adresse}}{{else}}–{{/if}}
          </li>
          <li class="list-group-item">
            <strong class="me-3">Krankenkasse:</strong>
            {{#if data.krankenkasse}}{{data.krankenkasse}}{{else}}–{{/if}}
          </li>
          <li class="list-group-item">
            <strong class="me-3">Aktuelle Symptome:</strong>
            {{#if symptoms.length}}
              {{#each symptoms}}
                {{this}}{{#unless @last}}, {{/unless}}
              {{/each}}
            {{else}}–{{/if}}
          </li>
        </ul>
      </div>
    </div>

    {{!-- Bisherige Ergebnisse --}}
    <div class="card w-100">
      <div class="card-header">
        <h5 class="mb-0">Bisherige Ergebnisse</h5>
      </div>
      <div class="card-body overflow-auto" style="max-height: 60vh;">
        <ul class="list-group list-group-flush mb-0">

          <li class="list-group-item">
            <strong class="me-3">Mögliche Diagnosen:</strong>
            {{#if diagnoses.length}}
              {{#each diagnoses}}
                {{this.name}}{{#unless @last}}, {{/unless}}
              {{/each}}
            {{else}}–{{/if}}
          </li>

          <li class="list-group-item">
            <strong class="me-3">Triagestufe:</strong>
            {{#if triage}}
              {{triage}}
            {{else}}–{{/if}}
          </li>

          <li class="list-group-item">
            <strong class="me-3">Untersuchungen:</strong>
            {{#if exams.length}}
              <ul class="mt-1 ms-3">
                {{#each exams}}
                  <li>
                    {{this.name}}
                    <span class="badge bg-secondary">{{this.priority}}</span>
                  </li>
                {{/each}}
              </ul>
            {{else}}–{{/if}}
          </li>

          <li class="list-group-item">
            <strong class="me-3">Behandlungen:</strong>
            {{#if treatments.length}}
              {{#each treatments}}
                {{this}}{{#unless @last}}, {{/unless}}
              {{/each}}
            {{else}}–{{/if}}
          </li>

          <li class="list-group-item">
            <strong class="me-3">Experten:</strong>
            {{#if experts.length}}
              <ul class="mt-1 ms-3">
                {{#each experts}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            {{else}}–{{/if}}
          </li>

          <li class="list-group-item">
            <strong class="me-3">Allergien:</strong>
            {{#if allergies.length}}
              {{#each allergies}}
                {{this}}{{#unless @last}}, {{/unless}}
              {{/each}}
            {{else}}–{{/if}}
          </li>

        </ul>
      </div>
    </div>
  </div>
</div>
